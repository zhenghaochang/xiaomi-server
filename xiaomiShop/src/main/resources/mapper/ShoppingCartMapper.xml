<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhc.mapper.ShoppingCartMapper">


    <delete id="deleteAfterPay">
        delete from xiaomi.shopping_cart
        where id in
        <foreach collection="scIds" item="scId" separator="," open="(" close=")">
            #{scId}
        </foreach>
        and user_id = #{userId}
    </delete>
</mapper>